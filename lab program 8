  <p>Open console (Press F12 â†’ Console) to see results.</p>

  <script>
    // Variables
    let name = "Chandana";
    let age = 18;

    // If-else statement
    if (age >= 18) {
      console.log(name + " is an adult.");
    } else {
      console.log(name + " is a minor.");
    }

    // Loop
    for (let i = 1; i <= 3; i++) {
      console.log("Counting: " + i);
    }

    // Function
    function greet() {
      alert("Hello, " + name + "! Welcome to JavaScript!");
    }

    greet(); // Call function
  </script>
